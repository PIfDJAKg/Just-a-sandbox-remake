script/source = "extends Control

func _process(delta: float) -> void:
	if visible and Input.MouseMode.MOUSE_MODE_CAPTURED:
		Input.set_mouse_mode(Input.MOUSE_MODE_VISIBLE)
		GScript.UI_opened = true
		
	if Input.is_action_just_pressed(\"ui_cancel\") and visible:
		visible = false
		Input.set_mouse_mode(Input.MOUSE_MODE_CAPTURED)
		GScript.UI_opened = false
	
	if Input.is_action_just_pressed(\"q\") and !visible:
		visible = true
		Input.set_mouse_mode(Input.MOUSE_MODE_VISIBLE)
		GScript.UI_opened = true
		
	elif Input.is_action_just_pressed(\"q\") and visible:
		visible = false
		Input.set_mouse_mode(Input.MOUSE_MODE_CAPTURED)
		GScript.UI_opened = false


func _on_shoot_gun_pressed() -> void:
	for child in $\"../../cam/guns\".get_children():
		child.visible = false
	$\"../../cam/guns/Drobovik\".visible = true


func _on_obj_spawner_pressed() -> void:
	for child in $\"../../cam/guns\".get_children():
		child.visible = false
	$\"../../cam/guns/Svabra\".visible = true

func _on_spray_pressed() -> void:
	for child in $\"../../cam/guns\".get_children():
		child.visible = false
	$\"../../cam/guns/Spray\".visible = true
"

